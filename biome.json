{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "playground/**/*",
      "src/**/*",
      "test/**/*",
      "*.md",
      "**/*.json",
      "*.mjs",
      "*.ts",
      "*.css",
      "*.scss"
    ],
    "ignoreUnknown": false
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "info",
        "noUnusedFunctionParameters": "info",
        "noUnusedImports": {
          "level": "warn",
          "fix": "safe",
          "options": {}
        }
      },
      "style": {
        "useImportType": "off"
      },
      "a11y": {
        "useAriaPropsForRole": "off",
        "useKeyWithClickEvents": "off",
        "noStaticElementInteractions": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
